<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    android:layout_margin="@dimen/item_margin"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    app:cardBackgroundColor="@color/cardView_background_color">
<LinearLayout
    android:id="@+id/d"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">
        <LinearLayout
            android:id="@+id/d1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center|center_vertical"
            android:layout_weight="4">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center|center_vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/dconnected" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/device_text_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="我的设备"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:textSize="18dp"
                    android:textColor="@color/sensor_name_color"
                    android:singleLine="true"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/device_item_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ID:3244"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:textColor="@color/sensor_name_color"/>

            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/d2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/d1"
        android:layout_weight="3">
        <TextView
            android:id="@+id/device_itme_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="创建时间\n2016-06-14"
            android:textSize="18dp"
            android:textColor="@color/sensor_name_color"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/d3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/d2"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/device_item_delate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="删除"
            android:textSize="18dp"
            android:textColor="@color/sensor_name_color"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:id="@+id/device_item_subscrible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="订阅"
            android:textSize="18dp"
            android:textColor="@color/sensor_name_color"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/device_item_publish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="发布"
            android:textSize="18dp"
            android:textColor="@color/sensor_name_color"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>
</LinearLayout>
