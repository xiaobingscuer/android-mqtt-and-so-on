<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:elevation="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/feed_back_item_title_layout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="title"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2016-6-3"
                android:textSize="16dp"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/feed_back_item_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feed_back_item_title_layout">
            <TextView
                android:id="@+id/feed_back_item_content_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="这是今天的回复"
                android:textSize="20dp"/>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
