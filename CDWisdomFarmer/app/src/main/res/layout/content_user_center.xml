<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lixiaobing.widsdomfarmer.cdwisdomfarmer.UserCenter.UserCenterActivity"
    tools:showIn="@layout/app_bar_user_center">

    <LinearLayout
        android:id="@+id/user_center_heade_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0"
        android:layout_marginBottom="20dp">

        <com.example.lixiaobing.widsdomfarmer.cdwisdomfarmer.CircleImage.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:civ_border_color="@color/circle_image_boder_color"
            app:civ_border_width="2dp"
            android:src="@drawable/eyeb1"
            android:layout_gravity="center">
        </com.example.lixiaobing.widsdomfarmer.cdwisdomfarmer.CircleImage.CircleImageView>
        <TextView
            android:id="@+id/user_center_heade_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18202825315"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_center_item_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0"
        android:layout_below="@+id/user_center_heade_layout">

        <ListView
            android:id="@+id/user_center_item_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="0dp">
        </ListView>
    </LinearLayout>
</RelativeLayout>
